---
import bsky from "../svg/bsky.svg?raw"

import Layout from "../layouts/Layout.astro"
import * as bio from "./bio.md"
---

<Layout
  title="joerobot | product engineer"
  description="joerobot | product engineer"
  type="center"
>
  <main>
    <div>
      <h1 class="title">
        <span class="name">Joerobot</span>
        <span class="subtitle">Product Engineer</span>
      </h1>
    </div>
    <div class="bio">
      <bio.Content />
      <a
        class="icon-link"
        href="https://bsky.app/profile/joerobot.dev"
        target="_blank"
        title="My profile on Bluesky"
      >
        <Fragment set:html={bsky} />
      </a>
    </div>
  </main>
</Layout>

<style>
  h1 {
    text-transform: lowercase;
  }

  .title {
    font-size: var(--font-size-4xl);
  }

  .title {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .name::after {
    content: ".";
  }

  .subtitle {
    font-size: var(--font-size-3xl);
  }

  .bio {
    margin-block-start: 4rem;
    margin-inline-start: -1rem;
    border-radius: 2rem;
    padding-inline: 1rem;
    padding-block: 4rem;
    max-width: 60ch;
    background-color: var(--color-backgroundAccent);
  }

  .icon-link {
    margin-block-start: 1.25rem;
    color: var(--color-text);
  }

  .icon-link:hover,
  .icon-link:focus {
    color: var(--color-link);
  }

  @media screen and (min-width: 768px) {
    .title {
      font-size: var(--font-size-5xl);
    }

    .bio {
      margin-inline-start: -2rem;
      padding-inline-start: 2rem;
    }
  }
</style>
